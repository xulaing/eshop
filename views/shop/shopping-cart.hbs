<!DOCTYPE html PUBLIC "HTML 4.01//EN">
<html>
    <head>
  {{>head}}
</head>
<body>
<header>
  {{>header}}
</header>

{{# if products_added }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products_added }}
                <li class="list-group-item clearfix">
                    <div class="col-xs-5">
                        <strong>{{ this.item.title }}</strong><br/>
                        <em>{{{this.item.description}}}</em>
                    </div>
                    <div class="col-xs-2 text-right">
                        <span class="badge">{{ this.quantity }}</span>
                    </div>
                    <div class="col-xs-3 text-right">
                        {{ this.price }} CHF
                    </div>
                    <div class="col-xs-2 text-right">
                        <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: {{ totalPrice }} â‚¬</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="/payment" type="button" class="btn btn-success">Go to payment</a>
    </div>
{{ else }}
    Your shopping cart is empty.
    <div class="text-right">
        <a href="/payment" type="button" class="btn btn-success">Go to payment</a>
    </div>
{{/if}}

<footer>
    {{>footer}}
</footer>
</body>
</html>
