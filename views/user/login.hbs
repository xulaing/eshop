<!DOCTYPE html PUBLIC "HTML 4.01//EN">
<html>

<head>
    {{>head}}
</head>

<body>
    <header>
        {{>header}}
    </header>
    <div class="page">
        <form action="/users/login" method="POST">
            <h2>Login</h2>

            {{#if messages.sucess_msg }} 
                <p class="sucess">{{ messages.sucess_msg}} </p>
            {{/if}}

            {{#if messages.error}}
                <p class="error">{{ messages.error}}</p>
            {{/if}}

            <div class="input-wrap">
                <label for="email">Email</label>
                <input type="email" placeholder="Type your email" name="email" />
            </div>
            <div class="input-wrap">
                <label for="password">Password</label>
                <input type="password" placeholder="Type your password" name="password" />
            </div>
            <button type="submit">LOGIN</button>
            <a href="/users/register">Sign Up</a>
        </form>
    </div>
    <footer>
        {{>footer}}
    </footer>
</body>

</html>