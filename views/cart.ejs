<!DOCTYPE html PUBLIC "HTML 4.01//EN">
<html>

<head>
    <title>E-shop</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/admin.css">
    <link rel="stylesheet" href="../css/nav.css">
    <link rel="stylesheet" href="../css/cart.css">
</head>

<body>
    <%- include('partial/nav.ejs') %>
        <div class="page">
            <table id="table">
                <tr>
                    <td>Produit</td>
                    <td>Quantit√©</td>
                    <td>Prix</td>
                    <td></td>
                </tr>

                <% Object.values(productsCart).forEach(function(product){%>
                    <tr>
                        <td>
                            <%= product.product_name %>
                        </td>
                        <td>
                            <form method="post" action="/update_quantity?product_id=<%= product.product_id %>">
                                <span class="input-number-decrement"
                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">&#45;</span>
                                <input class="quantity" type="number" name="quantity"
                                    value="<%= product.product_quantity %>" min="1">
                                <span class="input-number-increment"
                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">&#43;</span>
                                <button type="submit">Save</button>
                            </form>
                        </td>
                        <td>
                            <%= product.product_price %>
                        </td>
                        <td>
                            <form
                                action="/product-delete?product_id=<%= product.product_id %>&product_quantity=<%= product.product_quantity %>"
                                method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <%})%>
            </table>
            <div class="column">
                <p>Total = <%= total %> $
                        <p>Livraison gratuite pour le lancement de la boutique ! </p>
                </p>
                <form
                    action="/pay?total=<%= total %>" method="POST">
                    <button type="submit">Go to Payment</button>
                </form>
            </div>
        </div>
        </div>
</body>

</html>